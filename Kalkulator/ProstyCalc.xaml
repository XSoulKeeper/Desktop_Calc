<UserControl x:Class="Kalkulator.ProstyCalc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="550" Width="450" Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    </Grid.RowDefinitions>

        <TextBox Name="Display"
                 Grid.Row="0" Height="60" Margin="0,25,4,1" FontFamily="Comic Sans MS"
                 FontSize="36" TextAlignment="Right" IsReadOnly="True" Text="0" Background="Transparent" />             
        <UniformGrid Grid.Row="1" Rows="4" Columns="4" Margin="25">
            
            <Button Content="7" FontSize="36" Click="Button_Click" Margin="5"/>
            <Button Content="8" FontSize="36" Click="Button_Click" Margin="5"/>
            <Button Content="9" FontSize="36" Click="Button_Click" Margin="5"/>
            <Button Content="/" FontSize="36" Click="Button_Click" Margin="5"/>

            <Button Content="4" FontSize="36" Click="Button_Click" Margin="5"/>
            <Button Content="5" FontSize="36" Click="Button_Click" Margin="5"/>
            <Button Content="6" FontSize="36" Click="Button_Click" Margin="5"/>
            <Button Content="*" FontSize="36" Click="Button_Click" Margin="5"/>

            <Button Content="1" FontSize="36" Click="Button_Click" Margin="5"/>
            <Button Content="2" FontSize="36" Click="Button_Click" Margin="5"/>
            <Button Content="3" FontSize="36" Click="Button_Click" Margin="5"/>
            <Button Content="-" FontSize="36" Click="Button_Click" Margin="5"/>

            <Button Content="0" FontSize="36" Click="Button_Click" Margin="5"/>
            <Button Content="C" FontSize="36" Click="Clear_Click" Margin="5"/>
            <Button Content="=" FontSize="36" Click="Equals_Click" Margin="5"/>
            <Button Content="+" FontSize="36" Click="Button_Click" Margin="5"/>
        </UniformGrid>
    </Grid>
</UserControl>